# SSH Configuration File

# Global Options
Host *
    # Security
    HashKnownHosts yes
    IdentitiesOnly yes
    
    # Connection
    ServerAliveInterval 60
    ServerAliveCountMax 2
    
    # Performance
    Compression yes
    
    # Authentication
    AddKeysToAgent yes

# Example Host Configuration
# Host github.com
#     User git
#     IdentityFile ~/.ssh/github_key


# GitHub.com
Host github.com
    User git
    IdentityFile ~/.ssh/github_ed25519
    IdentitiesOnly yes
    
